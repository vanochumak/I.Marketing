- var fonts = "//fonts.googleapis.com/css?family=Lato:300,400,300italic,700%7CPoppins:400,500,700"
- var html_class = "wide wow-animation"
- var switcherCounter = 0
- var contactFormCounter = 0
- var subscribeFormCounter = 0
- var mailchimpFormCounter = 0
- var campaignMonitorFormCounter = 0

include _mixins
include _config

block variables 

doctype html

html(lang="en" class=html_class) 
  head
    // Site Title
    block title
      title=pageName

    meta(name="format-detection" content="telephone=no")
    meta(name="viewport" content="width=device-width, height=device-height, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(charset='utf-8')

    link(rel="icon" href="images/favicon.ico" type="image/x-icon")

    // Stylesheets 
    link(rel="stylesheet" type="text/css" href=fonts)
    link(rel="stylesheet" href="css/bootstrap.css")
    link(rel="stylesheet" href="css/style.css")
    link(rel="stylesheet" href="css/mdi.css")
    link(rel="stylesheet" href="css/fl-bigmug-line.css")

    = "\n\t\t"
    <!--[if lt IE 10]>
    div(style='background: #212121; padding: 10px 0; box-shadow: 3px 3px 5px 0 rgba(0,0,0,.3); clear: both; text-align:center; position: relative; z-index:1;')
      a(href="http://windows.microsoft.com/en-US/internet-explorer/")
        img(src="images/ie8-panel/warning_bar_0000_us.jpg" border="0" height="42" width="820" alt="You are using an outdated browser. For a faster, safer browsing experience, upgrade for free today.")
    script(src="js/html5shiv.min.js")
    = "\n\t\t"
    <![endif]--> 
  body
    // Page preloader
    .page-loader
      .page-loader-body
        .preloader-wrapper
          .spinner-layer: .spinner.spinner-big
          .spinner-layer: .spinner.spinner-medium
          .spinner-layer: .spinner.spinner-small
            
    // Page
    .page
      block page

    // Global Mailform Output
    #form-output-global.snackbars

    // Javascript
    script(src="js/core.min.js")
    script(src="js/script.js")


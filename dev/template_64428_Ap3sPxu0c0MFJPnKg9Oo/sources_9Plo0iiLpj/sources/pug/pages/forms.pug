extends  ../_skeleton

//- Includes
include ../elements/_contact-form
include ../elements/_subscribe-form
include ../elements/_mailchimp-form
include ../elements/_campaign-monitor-form

block variables
  - var activeIndex = 4
  - var pageName = 'Forms'

block page
  // Page Header
  include ../sections/_header-centered
  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  // Forms
  section.section.section-lg.bg-white.text-center 
    .shell
      h3 Login Form
      .range.range-xs-center
        .cell-sm-8.cell-md-6.cell-lg-4
          // RD Mailform
          form.rd-mailform
            .form-wrap.form-wrap-validation
              input#forms-login-name.form-input(type="text" name="name" data-constraints='@Required')
              label.form-label(for="forms-login-name") E-mail or nickname
            .form-wrap.form-wrap-validation
              input#forms-login-password.form-input(type="password" name="password" data-constraints="@Required")
              label.form-label(for="forms-login-password") Password
            .form-button
              button.button.button-block.button-primary(type="submit") Sign In

      p.offset-custom-1.text-gray-light or enter with

      .group-xs.group-middle
        a.icon.icon-md-smaller.icon-circle.icon-filled.mdi.mdi-facebook(href='#')
        a.icon.icon-md-smaller.icon-circle.icon-filled.mdi.mdi-twitter(href='#')
        a.icon.icon-md-smaller.icon-circle.icon-filled.mdi.mdi-google(href='#')
  ="\n"

  // Contact us
  section.section.section-lg.bg-white.text-center
    .shell
      .range.range-xs-center
        .cell-sm-10.cell-lg-8
          h3 Contact us
          +contact-form
  ="\n"

  // Contact us
  section.section.section-lg.bg-white.text-center
    .shell
      .range.range-xs-center
        .cell-sm-10.cell-lg-8
          h3 Contact Form with ReCaptcha

          +contact-form
            .cell-md-12
              // Google captcha
              .form-wrap.form-validation-left.text-left
                .recaptcha#captcha1(data-sitekey="6LfZlSETAAAAAC5VW4R4tQP8Am_to4bM3dddxkEt")
  ="\n"

  // NewsLetter
  section.section.section-lg.bg-white
    .shell
      h3.text-center NewsLetter
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .text-gray-light
            p Keep up with our always upcoming product features and technologies.
            p.offset-top-0 Enter your e-mail and subscribe to our newsletter.
            
          article.inline-message
            p Subscribe form works as an e-mail newsletter. To activate such form with an enabled MailChimp service, replace the .rd-mailform class with .mailchimp-mailform and the form's action with MailChimp subscription URL.
            p To activate the Campaign Monitor service, you need to replace the formâ€™s .rd-mailform class with .campaign-mailform and copy the form's action and the name of the input field from the form generated by Campaign Monitor service.
            
          +subscribe-form('rd-mailform-inline-modern')
  ="\n"

  // Alternative Newsletter
  section.section.section-lg.bg-white
    .shell
      h3.text-center Alternative Newsletter
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .text-gray-light
            p Keep up with our always upcoming product features and technologies.
            p.offset-top-0 Enter your e-mail and subscribe to our newsletter.

          +subscribe-form()
  ="\n"

  // Checkbox
  section.section.section-lg.bg-white.text-center
    .shell
      h3 Checkbox
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .form-wrap
            label.checkbox-inline
              input(type='checkbox' checked='' name='check-1')
              | I agree to the
              a(href='privacy-policy.html') Terms of Use
  ="\n"

  // Switch
  section.section.section-lg.bg-white.text-center
    .shell
      h3 Switch
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .form-wrap
            label.checkbox-inline.checkbox-material
              input(type='checkbox' checked='' name='check-1')
              | I agree to the
              a(href='privacy-policy.html') Terms of Use
  ="\n"

  // Radio inputs
  section.section.section-lg.bg-white.text-center
    .shell
      h3 Radio inputs
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .form-wrap
            ul.radio-group
              li
                label.radio-inline
                  input(type='radio' name='radio-group' checked='')
                  | Option 1
              li
                label.radio-inline
                  input(type='radio' name='radio-group')
                  | Option 2
              li
                label.radio-inline
                  input(type='radio' name='radio-group')
                  | Option 3
  ="\n"


  // Dropdown list
  section.section.section-lg.bg-white.text-center
    .shell
      h3 Dropdown list
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .form-wrap.box-width-1
            // Select 2
            select.form-control.select-filter(data-placeholder="All", data-minimum-results-for-search="Infinity", data-constraints="@Selected", name='city')
              option(label=' ') 
              option(value="1" selected='') New York
              option(value="2") Chicago
              option(value="3") San Francisco
  ="\n"

  // Date input
  section.section.section-lg.bg-white.text-center
    .shell
      h3 Date input
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .form-wrap.box-width-1
            input.form-input#form-element-date(data-time-picker='date', name='date')
            label.form-label(for='form-element-date') Date
  ="\n"

  // Number input
  section.section.section-lg.bg-white.text-center
    .shell
      h3 Number input
      .range.range-sm-center
        .cell-sm-8.cell-lg-6
          .form-wrap.box-width-1
            input.form-input.input-append#form-element-stepper(type='number' min='0' max='300' value='1')
  ="\n"

  // Formatting forms
  section.section.section-lg.bg-white.text-center
    .shell
      .range.range-xs-center
        .cell-sm-10.cell-lg-8
          h3 Formatting forms
          // RD Mailform
          form.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
            .range.range-20
              .cell-sm-6
                .form-wrap.form-wrap-validation
                  label.form-label-outside(for="forms-3-name") First name
                  input#forms-3-name.form-input(type="text" name="name" data-constraints='@Required')
              .cell-sm-6
                .form-wrap.form-wrap-validation
                  label.form-label-outside(for="forms-3-last-name") Last name
                  input#forms-3-last-name.form-input(type="text" name="last-name" data-constraints="@Required")
              .cell-xs-12
                label.form-label-outside Address
                .form-wrap.form-wrap-inline
                  input.form-input#forms-3-street-address(type="text" name="street-address")
                  label.form-label(for="forms-3-street-address") Street Address
                .form-wrap.form-wrap-inline
                  input.form-input#forms-3-city(type="text" name="city")
                  label.form-label(for="forms-3-city") City
                .form-wrap.form-wrap-inline
                  input.form-input#forms-3-state(type="text" name="state")
                  label.form-label(for="forms-3-state") State
              .cell-sm-12
                .form-wrap.form-wrap-validation
                  label.form-label-outside(for="forms-3-message") Message
                  textarea#forms-3-message.form-input.form-input-lg(name="message" data-constraints="@Required")
              .cell-sm-6
                .form-wrap
                  input.form-input#forms-3-date(data-time-picker='date')
                  label.form-label(for='form-element-date') Date
              .cell-sm-6
                .form-wrap
                  // Select 2
                  select.form-control.select-filter(data-placeholder="All", data-minimum-results-for-search="Infinity", data-constraints="@Required", name='city')
                    option(value="1") New York
                    option(value="2") Chicago
                    option(value="3") San Francisco

              .cell-xs-12
                .form-wrap
                  label.checkbox-inline
                    input(type='checkbox' name='check-1')
                    | I agree to the
                    a(href='privacy-policy.html') Terms of Use

              .cell-md-12.offset-custom-1
                .form-button
                  button.button.button-primary(type="submit") send message
  ="\n"

  // Page Footer  // Page Footer   
  +footer-default({className: 'bg-gray-lighter'})
extends  ../_skeleton

//- Includes

block variables
  - var activeIndex = 4
  - var pageName = 'Coming soon'

block page
  // Page Header
  header.section.page-header.bg-gray-darker.breadcrumbs-custom-wrap
    include ../sections/navbar-centered

  section.section.fullwidth-page.bg-gray-darker
    .fullwidth-page-inner
      .section-md.text-center
        .shell-wide
          p.breadcrumbs-custom-subtitle We're Getting Ready to Launch In
          .countdown-wrap
            .DateCountdown(data-type='until', data-date='2018-12-31 00:00:00', data-format='wdhms', data-color='#50e590', data-bg='rgba(255, 255, 255, 0)', data-width='0.02')
          p Our website is coming soon and we are currently working very hard #[br.veil.reveal-sm-inline]to give you the best experience on our new website.
          .range.range-xs-center 
            .cell-sm-10.cell-lg-5.cell-xl-4
              +subscribe-form('rd-mailform-inline-modern rd-mailform-inline-centered')

      // Page Footer
      .section-xs.page-footer.text-center
        .shell
          p.right
            | &#169; #[span(class="copyright-year")] All Rights Reserved
            | &nbsp;
            a(href="#") Terms of Use
            | &nbsp;
            span and
            | &nbsp;
            a(href="privacy-policy.html") Privacy Policy
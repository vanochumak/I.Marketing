extends  ../_skeleton

//- Includes

block variables
  - var activeIndex = 4
  - var pageName = 'Tabs' 
 
block page
  // Page Header
  include ../sections/_header-centered
  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
